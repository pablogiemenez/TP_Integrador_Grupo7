<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:name=".SessionVeterinario"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="Veterinaria Digital"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TP_Integrador_Grupo7"
        tools:targetApi="31">
        <activity
            android:name=".ListadoCitasActivity"
            android:exported="false" />
        <activity
            android:name=".AltaCitaActivity"
            android:exported="false" />
        <activity
            android:name=".AltaTratamientoActivity"
            android:exported="false" /> <!-- Declaración de la actividad LoginActivity como pantalla de inicio -->
        <activity
            android:name=".LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- Declaración de la actividad AltaVeterinarioActivity -->
        <activity
            android:name=".AltaVeterinarioActivity"
            android:exported="false" /> <!-- Declaración de la actividad Home -->
        <activity
            android:name=".Home"
            android:exported="true" />
        <activity android:name=".AltaPropietariosActivity" />
        <activity android:name=".AltaMascotaActivity" />
    </application>

</manifest>